# !=== PACMAN ===
alias pcsyy='sudo pacman -Syy'			# Force refresh of all package lists after updating /ect/pacman.d/mirrorlist
alias pcsu='sudo pacman -Su'			# Probe the upgrade
alias pcsyu='sudo pacman -Syu'			# Sync with upstream repos + upgrade
alias pcsya='sudo pacman -Sy && sudo abs'	# Update and refresh the local package and ABS dbs against repos
alias pcs='sudo pacman -S'			# Install
alias pcu='sudo pacman -U'			# Install from makepkg AUR
alias pcss='pacman -Ss'				# Search on repos
alias pcsi='pacman -Si'				# Display info about package on repos
alias pcqs='pacman -Qs'				# Search packages in local db
alias pcqi='pacman -Qi'				# Display info about package in local db
alias pcqm='pacman -Qm'				# List foreign packages
alias pcqdt='pacman -Qdt'			# List orphan packages (no longer needed dependencies)
alias pcr='sudo pacman -R'			# Remove, keep configs + dependencies
alias pcrns='sudo pacman -Rns'			# Remove, don't keep configs + dependencies

