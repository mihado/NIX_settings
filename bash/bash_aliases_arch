alias gco='git checkout'
alias gcm='git checkout master'
alias gcp='git checkout production'

# !=== RAILS ===
alias rn='rails new'
alias rc='rails console'
alias rs='rails server'
alias rg='rails generate'
alias rd='rails destroy'

alias renv='RAILS_ENV'

alias bx='bundle exec'
alias bxan='bundle exec annotate'
alias bxr='bundle exec rspec'
alias bxc='bundle exec cucumber'
alias bxs='bundle exec spork'

alias rdm='bundle exec rake db:migrate; bundle exec rake db:migrate RAILS_ENV=test'
alias rdr='bundle exec rake db:migrate:redo; bundle exec rake db:migrate:redo RAILS_ENV=test'
alias rdrb='bundle exec rake db:rollback'
alias rdrs='bundle exec rake db:reset'
alias rdpp='bundle exec rake db:populate; bundle exec rake db:test:prepare'
